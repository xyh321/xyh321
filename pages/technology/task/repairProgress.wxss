.step {
  position: relative;
  min-height: 180rpx;
}

.step:nth-last-child(2) {
  /* border-left: 2px dashed #C1C1C1; */
}

.step:last-child {
  border-left: 0;
}

.step_active {
  border-left: 2px solid #0099FF;
}

.sign {
  position: absolute;
  left: -20rpx;
  color: #fff;
  background: #C1C1C1;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.sign_active {
  background: #0099FF;
}

.info {
  box-sizing: border-box;
  padding-left: 20px;
  position: relative;
  top: -4rpx;
}

.info text:first-child {
  color: #0099ff;
}

.info text:nth-child(3) {
  color: #C1C1C1;
  font-size: 24rpx;
  margin-left: 10px;
}

.star {
  width: 40rpx;
  margin-right: 10px;
}

.evaluate {
  position: absolute;
  right: 35px;
  color: #FF5118;
  font-size: 24rpx;
}

.task_btn2 {
  margin-right: 10px;
  margin-bottom: 10px;
  border: 1px solid #202020;
}

.task_active {
  border: 1px solid #FF5118;
}

textarea {
  border: 1px solid #f1f1f1;
  border-radius: 3px;
  width: 100% ;
  height: 220rpx;
  display: flex;
  box-sizing: border-box;
  padding: 10px;
  margin-top: 10px;
}