@import '../task/administration.wxss';

.time {
  color: #202020;
}

.cell>view:first-child {
  width: 140rpx;
}

.cell>view:last-child {
  width: calc(100% - 140rpx);
}

textarea {
  border: 1px solid #f1f1f1;
  border-radius: 3px;
  width: 100%;
  height: 180rpx;
  display: flex;
  box-sizing: border-box;
  padding: 10px;
  z-index: 0;
}

.evaluateImg {
  width: calc((100% - 30px) / 4);
  margin: 0 10px 10px 0;
  position: relative;
}

.evaluateImg:nth-child(4n) {
  margin: 0 0 10px 0;
}

.shanchu {
  width: 36rpx;
  height: 36rpx;
  box-sizing: border-box;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 7rpx;
  right: 7rpx;
}

.goods_cell_img {
  width: 100%;
  height: 0;
  overflow: hidden;
  margin: 0;
  padding-bottom: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  border: 1px solid #ddd;
  box-sizing: border-box;
}