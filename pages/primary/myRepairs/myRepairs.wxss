page {
	background-color: #F1F1F1;
}

.listFirst {
	margin-top: 300rpx;
}
.listFirst:last-child{
	margin-bottom: 200rpx;
}

.workCard {
	box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.16);
	opacity: 1;
	border-radius: 8px;
	background-color: #FFFFFF;
	/* padding: 0rpx 20rpx 20rpx 20rpx; */
	margin: 20rpx;
}


.head {
	width: 100%;
	color: #707070;
	padding: 15px 10px;
	font-size: 27rpx;
	z-index: 1;
	left: 0;
	box-shadow: #cacaca 0px 0px 2px 1px;
}

.active {
	position: relative;
	color: #0099FF;
}

.active::after {
	content: '';
	position: absolute;
	bottom: -15px;
	left: calc(50% - 40rpx);
	width: 80rpx;
	height: 4rpx;
	background-color: #0099FF;
}


.cardTop {
	padding: 20rpx;
	border-bottom: 1px solid #F1F1F1;
	padding-bottom: 20rpx;
}

.cardNumber {
	font-size: 24rpx;
	font-family: PingFang SC;
	font-weight: bold;
	color: #202020;
}

.cardTime {
	font-size: 20rpx;
	font-family: PingFang SC;
	font-weight: 400;
	color: #C1C1C1;
}

.cardContent {
	padding: 20rpx;
	font-size: 20rpx;
	font-family: PingFang SC;
	font-weight: 400;
	line-height: 30rpx;
	color: #202020;
	padding-bottom: 20rpx;
}

.name,
.phoneNumber,
.company,
.apartment,
.address,
.type,
.reason,
.photo,
.technoName,
.technoPhone {
	margin-top: 20rpx;
	display: flex;
	align-items: flex-start;
}

.cardContent span,
.reImg {
	margin-left: 40rpx;
}

.faultImg {
	width: 120rpx;
	height: 120rpx;
	margin: 0 8px 8px 0;
}

.allot {
	border: 1px solid #0099FF;
	border-radius: 8rpx;
	padding: 8rpx 32rpx;
}

.but {
	padding: 20rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	padding-top: 20rpx;
	border-top: 1px solid #F1F1F1;
}

.but view {
	width: 144rpx;
	height: 52rpx;
	background-color: #0099FF;
	border-radius: 8rpx;
	font-size: 20rpx;
	font-family: PingFang SC;
	font-weight: 400;
	line-height: 28rpx;
	color: #FFFFFF;
}

textarea {
	width: 550rpx;
	height: 200rpx;
}

.but button {
	width: 144rpx !important;
	height: 52rpx;
	background-color: #0099FF;
	border-radius: 8rpx;
	font-size: 20rpx;
	font-family: PingFang SC;
	font-weight: 400;
	line-height: 28rpx;
	color: #FFFFFF;
}

.length {
	text-align: center;
	margin-top: 500rpx;
