radio {
	font-size: 20rpx;
	font-family: PingFang SC;
	font-weight: 400;
	line-height: 28rpx;
	margin-left: 20rpx;
}

.deal {
	font-size: 20rpx;
	font-family: PingFang SC;
	font-weight: 400;
	line-height: 28rpx;
	color: #0099FF;
}

/* 未选中的样式 */
radio .wx-radio-input {
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
}

/* 选中后 背景及勾 的样式 */
radio .wx-radio-input.wx-radio-input-checked::before {
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	line-height: 30rpx;
	text-align: center;
	font-size: 25rpx;
	color: #fff;
	background: #0099FF;
	transform: translate(-50%, -50%) scale(1);
}
