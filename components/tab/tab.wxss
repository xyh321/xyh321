.tabs_title {
	display: flex;
	padding: 10rpx 0;
	background-color: #fff;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 400;
}

.tabs_item {
	flex: 1;
	display: flex;
	justify-content: center;
	align-items: center;
	padding-bottom: 20rpx;
	/* border: 1px solid #000; */
	margin-right: 150rpx;

}

.tabs_item:first-child {
	margin-left: 80rpx;
}

.tabs_item:last-child {
	margin-right: 80rpx;
}

.active {
	color: #0099FF;
	padding-bottom: 20rpx;
	border-bottom: 5rpx solid currentColor;
}
